class Solution:
    def findMaxAverage(self, nums: List[int], k: int) -> float:
        curr = 0 # current window sum value
        for i in range(k):
            curr += nums[i]
        
        ans = curr / k # current window answer 
        
        for i in range(k, len(nums)):
            curr += nums[i] - nums[i - k] # modifying window sum
            ans = max(ans, curr / k) # recalculating max average of first window with remaining windows
        
        return ans 
