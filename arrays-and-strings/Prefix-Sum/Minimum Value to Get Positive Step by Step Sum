class Solution:
    def minStartValue(self, nums: List[int]) -> int:
        # idea: find lowest value prefix sum ever dips to
        # use a starting value high enough to make this 1
        # do the running sum of the array itself, and find the lowest value it will ever hit
        # make my starting value a value that is the minimum required so 
        # that once i calculate the prefix sum, the smallest value is now 1 (x + minPrefix >= 1)
        
        prefix = [nums[0]]
        
        for i in range(1, len(nums)):
            prefix.append(nums[i] + prefix[-1])
            
        minPrefix = min(prefix)
        
        return max(1, 1 - minPrefix)
            
        
        
        
