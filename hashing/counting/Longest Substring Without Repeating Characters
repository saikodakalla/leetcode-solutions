class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        seen = defaultdict(int) # create a set of only unique things
        left = 0 # left pointer
        length = 0 # length of valid subarray
        
        for right in range(len(s)): # moving right
            while seen[s[right]] > 0: # if the rightmost thing is in seen with a count of more than 0
                seen[s[left]] -= 1 # remove leftmost thing
                left += 1 # move left pointer one to the right
            seen[s[right]] += 1 # if rightmost is not in set, increment its value inside the set
            length = max(length, right - left + 1) # set length equal to the max of length and current window size
        
        return length # return final value
